function spawnMeteor(meteor)
	local meteor = Instance.new("Part")

	meteor.Size = Vector3.new(10,10,10)
	meteor.Position = Vector3.new(math.random(-80,80), 100, math.random(-80,80))
	meteor.CanCollide = true
	local light = Instance.new("PointLight")
	light.Parent = meteor
	light.Brightness = 10
	light.Range = 20
	light.Shadows = true
	light.Color = Color3.new(1, 0, 0)
    meteor.Shape = Enum.PartType.Ball	
	meteor.BrickColor = BrickColor.new("Bright red")
	meteor.Material = Enum.Material.CrackedLava
	meteor.Parent = workspace
	wait(4)
	meteor:Destroy()

end
